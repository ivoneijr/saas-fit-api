{
  "PORT": {
    "required": true,
    "description": "Defines the port when server will be running",
    "default": 3000,
    "validators": [
      {
        "name": "numeric"
      }
    ]
  },
  "NODE_ENV": {
    "required": true,
    "description": "This defines the current environment, one of: develop, homolog, beta",
    "validators": [
      {
        "name": "in",
        "options": ["develop", "staging", "production"]
      }
    ]
  },
  "DEBUG": {
    "required": true,
    "default": false,
    "description": "Debug flag to show db and transaction logs"
  },
  "SKIP_AUTH": {
    "default": false,
    "description": "Flag to skip authenticated middleware"
  },
  "JWT_SECRET": {
    "required": true,
    "description": "Json web token secret"
  },
  "JWT_REFRESH_SECRET": {
    "required": true,
    "description": "Json web refresh token secret"
  },
  "JWT_EXPIRES_IN": {
    "required": true,
    "description": "Expiration jwt token"
  },
  "LOGGLY_TOKEN": {
    "required": true,
    "description": "Loggly token"
  },
  "LOGGLY_SUBDOMAIN": {
    "required": true,
    "description": "Loggly token"
  },
  "LOGGLY_TAGS": {
    "required": true,
    "description": "Loggly token"
  },
  "DB_HOST": {
    "required": true,
    "default": "localhost",
    "description": "Database connection host"
  },
  "DB_PORT": {
    "required": true,
    "default": 5432,
    "description": "Database connection port"
  },
  "DB_DATABASE": {
    "required": true,
    "default": "live_experience",
    "description": "Database schema"
  },
  "DB_USERNAME": {
    "required": true,
    "default": "postgres",
    "description": "Database user credential"
  },
  "DB_PASSWORD": {
    "required": true,
    "default": "postgres",
    "description": "Database password"
  },
  "TOKBOX_API_KEY": {
    "required": true,
    "description": "Tokbox api key"
  },
  "TOKBOX_API_SECRET": {
    "required": true,
    "description": "Tokbox api secret"
  }
}
